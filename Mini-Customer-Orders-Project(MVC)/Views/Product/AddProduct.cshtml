@model Mini_Customer_Orders_Project_MVC_.Entity.Product
@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Views/Shared/_CoreLayout.cshtml";
}

<h1>Məhsul əlavə etmə səhifəsi</h1>

<form method="post">
    @Html.Label("Məhsulun adı")
    @Html.TextBoxFor(x=>x.Name,new {@class="form-control"})
    <br />
    @Html.Label("Məhsulun qiyməti")
    @Html.TextBoxFor(x=>x.Price,new{@class="form-control"})
    <br />
    @Html.Label("Məhsulun miqdarı")
    @Html.TextBoxFor(x=>x.Stock,new{@class="form-control"})
    <br />
    <button class="btn btn-info">Məhsul əlavə et</button>
</form>