@using Mini_Customer_Orders_Project_MVC_.Entity
@model List<Customer>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CoreLayout.cshtml";
}

<h1>Müştəri səhifəsi</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Müştəri adı</th>
        <th>Şəhər</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.City</td>
        </tr>
    }
</table>
<a href="/Customer/AddCustomer/" class="btn btn-primary">Yeni Müştəri əlavə et</a>

